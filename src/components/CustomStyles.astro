---
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/800.css';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';

// Rethink Sans
---

<style is:inline>
  @font-face {
    font-family: 'Rethink Sans';
    src: url('/fonts/RethinkSans-Regular.ttf');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'MDNichrome';
    src: url('/fonts/MDNichrome-Bold.otf') .format('opentype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --aw-font-sans: 'Rethink Sans';
    --aw-font-serif: 'Rethink Sans';
    --aw-font-heading: 'MDNichrome';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Rethink Sans';
    --aw-font-serif: 'Rethink Sans';
    --aw-font-heading: 'MDNichrome';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: #083433;
    --aw-color-text-default: #083433;
    --aw-color-text-muted: #083433;
    --aw-color-bg-page: rgb(232 231 222);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
