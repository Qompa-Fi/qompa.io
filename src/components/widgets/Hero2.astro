---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import { YouTube } from 'astro-embed';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),
  video = await Astro.slots.render('video'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose bg-lime min-h-screen" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:h-screen lg:max-h-160 lg:gap-8">
      <div class="basis-1/2 text-left pb-10 md:pb-16 mx-auto">
        {tagline && <p class="text-base text-secondary font-bold tracking-wide uppercase" set:html={tagline} />}
        {
          title && (
            <h1
              class="md:text-8xl text-8xl font-bold leading-tighter mb-4 font-heading text-lime dark:text-dark-lime tracking-normal"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto xl:text-xl lg:max-w-none">
          {subtitle && <p class="text-muted mb-6 dark:text-dark-lime" set:html={subtitle} />}

          {
            actions && (
              <div class="sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 lg:justify-start lg:m-0 lg:max-w-7xl">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="font-semibold w-full sm:mb-0" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
          <!-- <div class="pt-10 space-y-6 m-auto">
            <span class="text-dark-lime font-bold hover:text-lime-200 block">Supervisados por</span>
            <SBS width={200} height={50} />
          </div> -->
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div class="basis-1/2">
        {
          image && (
            <div class="relative m-auto max-w-5xl rounded-lg max-h-98	">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto rounded-md w-full"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  loading="eager"
                  width={500}
                  height={500}
                  {...image}
                />
              )}
            </div>
          )
        }
        {
          video && (
            <div class="relative m-auto max-w-5xl">
              <YouTube id="gxBkghlglTg" title="Astro just Launched.... Could it be the ultimate web framework?" />
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
