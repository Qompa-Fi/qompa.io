          {
            description: 'Administrador y 10 cuentas configurables',
          },
          {
            description: '24/7 VIP Support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Elegir este plan',
          href: 'https://47571431.hs-sites.com/es-pe/qompa-reg%C3%ADstrate-y-transforma-las-finanzas-de-tu-empresa',
        },
      },
