    isDark={false}
    classes={{container: 'bg-lime', prices: 'bg-light-gray'}}
    prices={[
      {
        title: 'gratis',
        price: '0',
        period: 'per month',
        items: [
          {
            description: 'Hasta 5 transacciones de pago',
          },
          {
            description: '5 consultas personalizadas con AI',
          },
          {
            description: 'Único accceso de administrador',
          },
          {
            description: '24/7 VIP Support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Elegir este plan',
          href: '#',
        }
      },
      {
        title: 'standard',
        price: 30,
        period: 'Por Mes',
        items: [
        {
            description: 'Hasta 15 transacciones de pago',
          },
          {
            description: '15 consultas personalizadas con AI',
